<% include ../partials/header %>
<nav class="navbar navbar-default navbar-fixed-top navbar transparent">
      <a class="navbar-brand" href="/playlists">Playlisted</a>

<form class="navbar-form navbar-right" role="search" action="/searchresults">
        <div class="form-group">
          <a href="/playlists/new" class="btn btn-default">New Playlist</a>
          <a href="/logout" class="btn btn-default">Log Out</a>
      </form> 
</nav>
<center><h1><%= playlist.title %></h1></center>
<table class="table table-striped">
  <thead>
  <tr>
    <td class="heading"></td>
    <td class="heading"><strong>Title:</strong></td>
    <td class="heading"><strong>Genre:</strong></td>
    <td class="heading"><strong>Location:</strong></td>
  </tr>
  </thead>
<tr>
  <td><img src="<%= playlist.art %>" width="100px" height="100px"></td>
  <td><a href="/playlists/<%= playlist.id%>"><%= playlist.title %></a></td>
  <td><%= playlist.genre %></td>
  <td><%= playlist.location %></td>
  <td><a href="/playlists/<%= playlist.id%>/songs/new"><button class="btn btn-default" >Add a Song</button></a></td>
  <td><a href="/playlists/<%= playlist.id%>/edit"><button class="btn btn-default" >Edit</button></a></td>
  <td><form action="/playlists/<%= playlist.id%>?_method=delete" method="POST"><button class="btn btn-default">Delete</button></form></td>
</tr>
</table>
<center><h1>Tracklist</h1></center>

<table class="table table-striped">
  <thead>
  <tr>
    <td class="heading"></td>
    <td class="heading"><strong>Title:</strong></td>
    <td class="heading"><strong>Artist:</strong></td>
    <td class="heading"><strong>Album:</strong></td>
    <td class="heading"><strong>Year:</strong></td>
    <td class="heading"><strong>Genre:</strong></td>
  </tr>
  </thead>
  <% playlist.songs.forEach(function(song){ %>
<tr>
  <td><img src="<%= song.art %>" width="100px"></td>
  <td><a href="/songs/<%= song.id%>"><%= song.title %></a></td>
  <td><%= song.artist %></td>
  <td><%= song.album %></td>
  <td><%= song.year %></td>
  <td><%= song.genre %></td>
  <td><a href="/playlists/<%= playlist.id%>/songs/<%= song.id%>/edit"><button class="btn btn-default" >Edit</button></a></td>
  <td><form action="/playlists/<%= playlist.id%>/songs/<%= song.id%>?_method=delete" method="POST"><button class="btn btn-default" type="submit">Delete</button></form></td>
</tr>
  <%}); %>
</table>



<% include ../partials/footer %>